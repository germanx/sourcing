<div id='response'>
  <h2><%= @response.firm %></h2>

  <%= simple_format(@response.description) %>

  <% if @response.assets.exists? %>
    <h3>Attached File</h3>
    <div class="assets">
      <% @response.assets.each do |asset| %>
        <p>
          <%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
        </p>
        <p>
          <small><%= number_to_human_size(asset.asset.size) %></small>
        </p>
      <% end %>
    </div>
  <% end %>
  Created by <%= @response.user.email %>
</div>

<div class="project-right">  
  <%= authorized?("edit response", @project) do %>
    <%= link_to "Edit Response", [:edit, @project, @ticket], class: "btn btn-small" %>
  <% end %>
  <%= authorized?("delete responses", @project) do %>
    <%= link_to "Delete Response",
        project_response_path(@project, @response),
        :method => :delete,
        :confirm => "Are you sure you want to delete this response?", class: "btn btn-small" %>
  <% end %>
</div>

