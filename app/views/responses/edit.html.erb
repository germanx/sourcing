<div class="page-header">
  <h1><%= t('.edit_response_for_project') %></h1>
  <h2><%= @project.name %></h2>
</div>

<%= form_for [@project, @response], :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>

  <div class="control-group">
  	<%= f.label :description, t('.description'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, placeholder: t('.add_description'), :class => "input-xxlarge", :rows => 5 %>
    </div>
  </div>
  
  <% number = 0 %>
  <div id='files'>
    <%= render :partial => "files/form", :locals => { :number => number } %>
  </div>
  <%= link_to t('.add_another_file'), 'javascript:', :id => "add_another_file" %>
  <br/>

  <div class="form-actions">
    <%= f.submit t('.edit_response'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel'), request.referer, :class => 'btn' %>
  </div>

<% end %>