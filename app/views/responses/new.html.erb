<%- model_class = Response -%>
<div class="page-header">
  <h1><%= t('.new_vendor') %></h1>
</div>

<%= form_for [@project, @response], :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>

  <div class="control-group">
    <%= f.label :firm, t('.name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:firm_id, @current_user_firms, :id, :name) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('.new'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel'), request.referer, :class => 'btn' %>
  </div>

<% end %>