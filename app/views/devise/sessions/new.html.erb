<div class="container">
	<div class="form-signin-container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin" }) do |f| %>
  
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading"><%= t('.please_sign_in') %></h2>
  
  <%= f.text_field :email, :class => "input-block-level", :placeholder => t('.email_address') %>

  <%= f.password_field :password, :class => "input-block-level", :placeholder => t('.password') %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> <%= t('.remember_me') %>
    </label>
  <% end %>

  <%= f.submit t('.sign_in'), :class => "btn btn-large btn-primary" %>

  <br/>
  <br/>
  
  <%= render :partial => "devise/shared/links" %>

  <% end %>
</div>  
</div>