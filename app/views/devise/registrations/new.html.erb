<div class="container">
	<div class="form-signin-container">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin" }) do |f| %>
      <%= devise_error_messages! %>

      <h2 class="form-signin-heading"><%= t('.sign_up') %></h2>

      <%= f.text_field :email, :class => "input-block-level", :placeholder => t('.email_address') %>

      <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password"  %>

      <%= f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "Password confirmation"  %>

      <%= f.submit "Sign up", :class => "btn btn-large btn-primary" %>
      
      <br/>
      <br/>

      <%= render :partial => "devise/shared/links" %>
    <% end %>
  </div>  
</div>
