<div class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "eRFP", root_path, :class => "brand" %>

      <div class="nav-collapse">
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to t('.projects'), projects_path %></li>

            <%= publishers_only do %>
              <li><%= link_to t('.vendors'), firms_path %></li>
            <% end %>

            <%= admins_only do %>
              <li><%= link_to t('.admin'), admin_users_path %></li>
            <% end %>
    
            <li><%= link_to t('.signed_in_as_') + current_user.email, "#" %></li>
            <li><%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %></li>

          <% else %>
            <li><%= link_to t('.sign_in'), new_user_session_path %></li>
