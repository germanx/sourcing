<div class="page-header">
  <h1>Companies</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= link_to firm.name, firm_path(firm) %></td>
        <td><%= firm.description %></td>
        <td><%= firm.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to "New Company", new_firm_path, class: "btn btn-primary" %>
</div>
