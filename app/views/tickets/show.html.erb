<% title(@project.name, "Project") %>
<div class="page-header">
  <h1><%= @ticket.title %></h1>
</div>
<em>Project: <%= @project.name %></em>

<p>
<strong>
  <%= simple_format(@ticket.description) %>
</strong>
</p>

<p class="muted">
  <small>
    <em>
      Created by <%= mail_to @ticket.user.email, @ticket.user.name %>
    </em>
  </small>
</p> 


<div class="project-right">  
  <%= authorized?("edit", @project) do %>
    <%= link_to "Edit Ticket", [:edit, @project, @ticket], class: "btn btn-primary" %>
  <% end %>
  <%= authorized?("edit", @project) do %>
    <%= link_to "Delete Ticket",
        project_ticket_path(@project, @ticket),
        :method => :delete,
        :confirm => "Are you sure you want to delete this ticket?", class: "btn btn-danger" %>
  <% end %>
</div>

<h2>Ticket Comments</h2>
<div id='comments'>
  <% if @ticket.comments.exists? %> 
    <%= render @ticket.comments.select(&:persisted?) %>
  <% else %>
    There are no comments for this ticket.
  <% end %>
</div>

<%= render "comments/form" %>
