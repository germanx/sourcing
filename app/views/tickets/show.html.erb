<div id='ticket'>
  <h2><%= @ticket.title %></h2>

  <%= simple_format(@ticket.description) %>

  Created by <%= @ticket.user.email %>
</div>

<div class="project-right">  
  <%= authorized?("edit tickets", @project) do %>
    <%= link_to "Edit Ticket", [:edit, @project, @ticket], class: "btn btn-small" %>
  <% end %>
  <%= authorized?("delete tickets", @project) do %>
    <%= link_to "Delete Ticket",
        project_ticket_path(@project, @ticket),
        :method => :delete,
        :confirm => "Are you sure you want to delete this ticket?", class: "btn btn-small" %>
  <% end %>
</div>

<h4>Comments</h4>
<div id='comments'>
  <% if @ticket.comments.exists? %> 
    <%= render @ticket.comments.select(&:persisted?) %>
  <% else %>
    There are no comments for this ticket.
  <% end %>
</div>

<%= render "comments/form" %>
