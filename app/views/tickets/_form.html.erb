<%= form_for [@project, @ticket], :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>

  <div class="control-group">
    <%= f.label :title, t('.title'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.text_area :description, placeholder: t('.add_description'), :rows => 3 %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit t('.add'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel'), request.referer, :class => 'btn' %>
  </div>

<% end %>

