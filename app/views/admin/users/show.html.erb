<div class="page-header">
  <h1>User <%= @user.name %></h1>
</div>

  <div class="control-group">
    Name: <%= @user.name %>
  </div>
  <div class="control-group">
    Email: <%= @user.email %>
  </div>
  <div class="control-group">
    Position: <%= @user.position %>
  </div>
  <div class="control-group">
    Phone: <%= @user.phone %>
  </div>
  <div class="control-group">
    Publisher: <%= @user.publisher %>
  </div>
  <div class="control-group">
    Admin: <%= @user.admin %>
  </div>
  <div class="control-group">
    Firm: <%= @user.firm.name %>
  </div>
  <div class="form-actions">
    <%= link_to "Permissions", admin_user_permissions_path(@user), class: "btn" %>
    <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-primary" %>
    <%= link_to "Delete", admin_user_path(@user), :method => :delete, 
            :confirm => "Are you sure you want to delete this user?", class: "btn btn-danger" %>
    <%= link_to 'Cancel', request.referer, :class => 'btn' %>
  </div>
