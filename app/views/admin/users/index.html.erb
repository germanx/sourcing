<div class="page-header">
  <h1>Users</h1>
</div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Firm</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user, [:admin, user] %></td>
          <td><%= user.email %></td>
          <td><%= user.firm.name %></td>
          <td>
            <%= link_to "Permissions", admin_user_permissions_path(user), class: "btn btn-small" %>
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-small btn-primary" %>
            <%= link_to "Delete", admin_user_path(user), :method => :delete, 
            :confirm => "Are you sure you want to delete this user?", class: "btn btn-small btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
  </div>

